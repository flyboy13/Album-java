<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:orientation="vertical"
    android:background="@drawable/custom_dialog_newalbum">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure to remove this picture from device?"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_no_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_cancle_newalbum"
            android:textSize="18sp"
            android:textColor="@color/blue"/>
        <Button
            android:id="@+id/btn_yes_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Yes"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_save_newalbum"
            android:textSize="18sp"
            android:textColor="@color/blue"/>
    </LinearLayout>
</LinearLayout>